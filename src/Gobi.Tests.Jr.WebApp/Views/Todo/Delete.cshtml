@model Gobi.Tests.Jr.WebApp.ViewModels.TodoViewModel

@{
	ViewData["Title"] = "Delete Todo Item";
	Layout = null;
}
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title" id="update-todo-modal-label">Delete ToDo Item</h5>
			<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
		</div>
		<div class="modal-body">
			<form asp-action="Delete" method="post" id="Deleteform">
				@Html.HiddenFor(model => model.NewTodoItem.Id)
				<div class="mb-3">
					<p>Tem certeza que deseja deletar o item com descrição:</p>
					<p><strong>@Html.DisplayFor(model=> model.NewTodoItem.Description)</strong></p>
					<span>Essa ação não pode ser desfeita!</span>
				</div>
			</form>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
			<button type="submit" form="Deleteform" value="submit" class="btn btn-danger">Delete</button>
		</div>
	</div>
</div>
